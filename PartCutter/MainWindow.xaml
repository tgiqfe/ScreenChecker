<Window x:Class="PartCutter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PartCutter"
        xmlns:lib="clr-namespace:PartCutter.Lib"
        mc:Ignorable="d"
        Title="MainWindow"
        WindowStyle="None"
        WindowState="Maximized"
        PreviewKeyDown="Window_PreviewKeyDown">
    <Window.Resources>
        <lib:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
    </Window.Resources>
    <Grid>
        <Image Name="MainImage" />
        <lib:TrimmingLayer Width="{Binding ElementName=MainImage, Path=ActualWidth}"
                           Height="{Binding ElementName=MainImage, Path=ActualHeight}"
                           Visibility="Hidden" />
    </Grid>
</Window>
